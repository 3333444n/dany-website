---
export interface Props {
  images: Array<{
    src: string;
    alt: string;
  }>;
}

const { images } = Astro.props;
---

<div class="slider-container overflow-x-auto fade-in">
  <div class="flex gap-4 pb-2">
    {
      images.map((image) => (
        <div class="flex-shrink-0">
          <img
            src={image.src}
            alt={image.alt}
            class="h-120 w-auto object-cover rounded-lg"
            loading="lazy"
          />
        </div>
      ))
    }
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .fade-in {
    animation: fadeIn 0.8s ease-in-out forwards;
  }

  .slider-container {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
  .slider-container::-webkit-scrollbar {
    display: none;
  }
</style>

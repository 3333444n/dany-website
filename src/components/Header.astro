---
// No props needed for now
---

<header
  class="fixed top-0 left-0 right-0 backdrop-blur-sm border-b border-gray-200/30 z-50"
  style="background-color: color-mix(in srgb, var(--color-background) 95%, transparent)"
>
  <nav class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-20">
      <!-- Logo/Name -->
      <a
        href="/"
        class="text-2xl font-bold text-neutral-dark hover:text-primary transition-colors"
      >
        Karen
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center space-x-8">
        <li>
          <a
            href="/"
            class="text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >About</a
          >
        </li>
        <li>
          <a
            href="/projects"
            class="text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >Projects</a
          >
        </li>
        <li>
          <a
            href="/contact"
            class="text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >Contact</a
          >
        </li>
      </ul>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-600 hover:text-primary transition-colors"
        aria-label="Toggle mobile menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <ul class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
        <li>
          <a
            href="/"
            class="block text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >Home</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="block text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >About</a
          >
        </li>
        <li>
          <a
            href="/projects"
            class="block text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >Projects</a
          >
        </li>
        <li>
          <a
            href="/contact"
            class="block text-gray-700 transition-colors duration-300 font-medium hover:text-primary"
            >Contact</a
          >
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener("DOMContentLoaded", () => {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>

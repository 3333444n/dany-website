---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProjectCard from "../components/ProjectCard.astro";

// Sample projects data
const projects = [
  {
    title: "Proyecto 1",
    content:
      "<p>Descripción del primer proyecto de diseño industrial. <strong>Enfoque en sostenibilidad</strong> y funcionalidad.</p>",
    img: "/placeholder-project-1.jpg",
    imgAlt: "Proyecto 1",
    slug: "proyecto-1",
  },
  {
    title: "Proyecto 2",
    content:
      "<p>Segundo proyecto destacado. <strong>Innovación en materiales</strong> y procesos de manufactura.</p>",
    img: "/placeholder-project-2.jpg",
    imgAlt: "Proyecto 2",
    slug: "proyecto-2",
  },
  {
    title: "Proyecto 3",
    content:
      "<p>Tercer proyecto de la colección. <strong>Diseño centrado en el usuario</strong> y experiencia.</p>",
    img: "/placeholder-project-3.jpg",
    imgAlt: "Proyecto 3",
    slug: "proyecto-3",
  },
  {
    title: "Proyecto 4",
    content:
      "<p>Cuarto proyecto creativo. <strong>Exploración de formas</strong> y nuevas tecnologías.</p>",
    img: "/placeholder-project-4.jpg",
    imgAlt: "Proyecto 4",
    slug: "proyecto-4",
  },
  {
    title: "Proyecto 5",
    content:
      "<p>Quinto proyecto innovador. <strong>Soluciones integrales</strong> para necesidades específicas.</p>",
    img: "/placeholder-project-5.jpg",
    imgAlt: "Proyecto 5",
    slug: "proyecto-5",
  },
  {
    title: "Proyecto 6",
    content:
      "<p>Sexto proyecto de diseño. <strong>Metodología aplicada</strong> y resultados medibles.</p>",

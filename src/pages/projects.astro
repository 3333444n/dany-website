  {
    title: "SPOT MAGAZINE",
    subtitle: "Revista digital de cultura urbana y tendencias",
    images: [
      imgSpot0,
      imgSpot1,
      imgSpot2,
      imgSpot3,
      imgSpot4,
      imgSpot5,
      imgSpot6,
      imgSpot7,
      imgSpot8,

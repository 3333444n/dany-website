---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Info from "../components/Info.astro";
import Content from "../components/Content.astro";
import Slider from "../components/Slider.astro";

// Import images for each project
import img8m from "../assets/images/8m.webp";
import imgCarneAjena0 from "../assets/images/carne-ajena0.webp";
import imgCarneAjena1 from "../assets/images/carne-ajena1.webp";
import imgCatrinas0 from "../assets/images/catrinas1.webp";
import imgTatuaje0 from "../assets/images/tatuaje0.webp";
import imgMuertos0 from "../assets/images/muertos0.webp";
import imgMuertos1 from "../assets/images/muertos1.webp";
import imgMuertos2 from "../assets/images/muertos2.webp";
import imgSpot0 from "../assets/images/spot0.webp";
import imgSpot1 from "../assets/images/spot1.webp";
import imgSpot2 from "../assets/images/spot2.webp";
import imgSpot3 from "../assets/images/spot3.webp";
import imgSpot4 from "../assets/images/spot4.webp";
import imgSpot5 from "../assets/images/spot5.webp";
import imgSpot6 from "../assets/images/spot6.webp";
import imgSpot7 from "../assets/images/spot7.webp";
import imgSpot8 from "../assets/images/spot8.webp";
import imgSpot9 from "../assets/images/spot9.webp";

const infoContent = `
<h2>Daniel Alejandro Peregrino Ortiz</h2>
<h3>Estudiante de<br>Comunicación y Periodismo</h3>

<div style="margin-top: 2rem;">
  <h4>Conecta</h4>
  <p>Ciudad de México<br>
  +52 5540567376<br>
  dannyoropeza76@gmail.com</p>
</div>
`;

const projects = [
  {
    title: "SPOT MAGAZINE",
    subtitle: "Revista digital: Edición digital",
    images: [imgSpot0, imgSpot1, imgSpot2, imgSpot3, imgSpot4, imgSpot5, imgSpot6, imgSpot7, imgSpot8, imgSpot9],
    description: `<p>Contenido editorial y visual enfocado en <strong>cultura urbana, tendencias emergentes, arte y sociedad contemporánea</strong>. Ideal para difusión digital mediante Drive u otras plataformas colaborativas.</p>
    <p><strong><a href="https://drive.google.com/file/d/1jf4DLEudw2_s2-_em2_0linM7Oohn8I-/view" target="_blank" rel="noopener noreferrer">Descarga la revista completa aquí →</a></strong></p>`,
  },
  {
    title: "Separadores 8M para el CECATI 128",
    subtitle: "Diseño conmemorativo Día Internacional de la Mujer (8M)",
    images: [img8m],
    description: `<p>Diseños de separadores conmemorativos por el <strong>Día Internacional de la Mujer (8M)</strong>, dirigidos al alumnado del CECATI 128. Cada uno contiene frases de empoderamiento femenino y arte visual inclusivo, enfocados en reforzar la sororidad, la memoria colectiva y la fuerza de las mujeres.</p>`,
  },
  {
    title: "Carne Ajena",
    subtitle: "Póster: Expo de Tatuajes 'Tatuarte CDMX 2024'",
    images: [imgCarneAjena0, imgCarneAjena1],
    description: `<p>Póster promocional de la <strong>Expo Tatuarte CDMX 2024</strong>, evento celebrado el 31 de mayo en las Islas de Ciudad Universitaria a las 15:00 h. Con arte gráfico vibrante y elementos del tatuaje tradicional japonés, el cartel invita a un encuentro lleno de arte corporal, cultura urbana y expresión alternativa.</p>`,
  },
  {
    title: "Catrinas",
    subtitle: "Póster: Desfile de Catrinas 2024",
    images: [imgCatrinas0],
    description: `<p>Diseño del <strong>Desfile de Catrinas 2024</strong>, con entrada libre el 29 de octubre a las 18:00 h. El recorrido va desde la Estela de Luz hasta el Zócalo capitalino. Con gráficos tradicionales de Día de Muertos y flor de cempasúchil, el cartel promueve una experiencia festiva y cultural en el corazón de la CDMX.</p>`,
  },
  {
    title: "Tatuaje",
    subtitle: "Póster: Expo de Tatuajes 'Tatuarte CDMX 2024'",
    images: [imgTatuaje0],
    description: `<p>Póster promocional de la <strong>Expo Tatuarte CDMX 2024</strong>, evento celebrado el 31 de mayo en las Islas de Ciudad Universitaria a las 15:00 h. Con arte gráfico vibrante y elementos del tatuaje tradicional japonés, el cartel invita a un encuentro lleno de arte corporal, cultura urbana y expresión alternativa.</p>`,
  },
  {
    title: "Muertos",
    subtitle: "Fotografía: Día de Muertos",
    images: [imgMuertos0, imgMuertos1, imgMuertos2],
    description: `<p>Un recorrido visual por las tradiciones del Día de Muertos en México. Esta serie de fotografías documenta altares, ofrendas y celebraciones, resaltando la riqueza cultural, los colores vibrantes y la emotividad de una de las festividades más emblemáticas del país.</p>`,
  },
];
---

<Layout title="Proyectos | Daniel Ortiz">
  <main>
    <section class="py-24 px-4">
      <div class="max-w-6xl mx-auto px-4">
        <div
          class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16 lg:items-start"
        >
          <!-- Info Component - Left Side -->
          <div class="lg:col-span-2 lg:sticky top-24">
            <Info>
              <div set:html={infoContent} />
            </Info>
          </div>
          <!-- Content Component - Right Side -->
          <div class="lg:col-span-3 space-y-16">
            {
              projects.map((project, idx) => (
                <div class="space-y-8">
                  <Content>
                    <h2 class="text-4xl font-bold">{project.title}</h2>
                    <h3 class="text-xl font-semibold mt-1 mb-6">
                      {project.subtitle}
                    </h3>
                    <div set:html={project.description} />
                  </Content>
                  <Slider
                    images={project.images.map((img) => ({
                      src: img.src,
                      alt: project.title,
                    }))}
                  />
                  {idx < projects.length - 1 && (
                    <hr class="border-t border-gray-800 my-16" />
                  )}
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </section>
    <Footer />
  </main>
</Layout>
